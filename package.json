{
  "name": "@0xlimao/traduora-cli",
  "version": "0.1.0",
  "description": "Modern Traduora CLI with TypeScript and client_credentials support",
  "type": "module",
  "main": "./dist/lib.cjs",
  "module": "./dist/lib.js",
  "types": "./dist/lib.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "import": "./dist/lib.js",
      "require": "./dist/lib.cjs"
    },
    "./cli": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "traduora": "dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/lib.ts --format esm,cjs --dts --clean",
    "docs:api-reference": "rm -rf docs/content/sdk-reference && typedoc --options typedoc.json",
    "dev": "tsx src/index.ts",
    "test:e2e:local": "bash test/e2e/run-local.sh",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "traduora",
    "cli",
    "i18n"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/flyinglimao/traduora-cli.git"
  },
  "bugs": {
    "url": "https://github.com/flyinglimao/traduora-cli/issues"
  },
  "homepage": "https://flyinglimao.github.io/traduora-cli/",
  "dependencies": {
    "commander": "^14.0.1",
    "dotenv": "^17.2.3",
    "jiti": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typedoc": "^0.28.17",
    "typedoc-plugin-markdown": "^4.10.0",
    "typescript": "^5.9.2"
  }
}
